<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.payrollmanagementsystem.controller.MainController"
            style="-fx-background-color: #f4f7fa;">
    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-pref-width: 220;">
            <Label text="Payroll System" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Separator style="-fx-background-color: #34495e;" />
            <Button text="Employee Management" onAction="#handleEmployee" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;" />
            <Button text="Salary Calculation" onAction="#handleSalary" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;" />
            <Button text="Payslip Generator" onAction="#handlePayslip" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;" />
            <Button text="Reports &amp; Charts" onAction="#handleReports" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;" />
            <VBox VBox.vgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180;" />
        </VBox>
    </left>
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Payroll Management Dashboard" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: white; -fx-padding: 20;">
            <Label text="Welcome to Payroll Management System!" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" />
        </StackPane>
    </center>
</BorderPane>